/*
========================================================================================
    SLURM cluster execution configuration ========================================================================================
*/

process {
    executor = 'slurm'
    queue = 'normal'
    
    // SLURM-specific settings
    clusterOptions = ''
    
    // Process-specific configurations
    withLabel: 'process_single' {
        cpus   = 1
        memory = 4.GB
        time   = 4.h
        queue  = 'short'
    }
    
    withLabel: 'process_low' {
        cpus   = 4
        memory = 8.GB
        time   = 6.h
        queue  = 'normal'
    }
    
    withLabel: 'process_medium' {
        cpus   = 10
        memory = 16.GB
        time   = 12.h
        queue  = 'normal'
    }
    
    withLabel: 'process_high' {
        cpus   = 20
        memory = 32.GB
        time   = 24.h
        queue  = 'normal'
    }
    
    withLabel: 'process_very_high' {
        cpus   = 40
        memory = 64.GB
        time   = 48.h
        queue  = 'long'
    }
}

executor {
    name = 'slurm'
    queueSize = 50
    submitRateLimit = '10 sec'
    pollInterval = '30 sec'
}

// Singularity configuration for SLURM (if needed)
singularity {
    enabled = false
    autoMounts = true
    cacheDir = "${HOME}/.singularity/cache"
}

